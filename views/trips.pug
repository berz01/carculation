extends layout

block content

    .wrapper.content
      #alert.alert
      .btn-group.display-type
        a.btn.btn-default.hidden-btn(href="#" data-type="tile") Tiles
        #trips
        .loading Loading...

block scripts
  script.
    var mapboxAccessToken = '#{mapboxAccessToken}';

  script(src="/bower_components/mapbox.js/mapbox.js")

  script(type='text/template' id='tripTile')
    .trip.tile.row
      a.col-md-6(href="/trips/{{id}}")
        .times
          .endTime {{ended_at_date}}<br>{{ended_at_time}}
          .duration {{duration}}
          .startTime {{started_at_date}}<br>{{started_at_time}}
          .tripLine
            div
            div
        .tripSummary
          .endAddress {{end_address.cleaned}}
          .tripSummaryBox
            .distance {{distance}}
            .mpg {{average_mpg}}
            .hardBrakes(class="{{hard_brakes_class}}") {{hard_brakes}}
            .hardAccels(class="{{hard_accels_class}}") {{hard_accels}}
            .durationOver70(class="{{speeding_class}}") {{speeding}}
          .startAddress {{start_address.cleaned}}
      .pricing.col-md-2
        h4 Price
        h5 ${{Math.round(((distance * .75)*100))/100}}
      .map.col-md-4(id="map{{id}}")
      br


  script(type='text/template' id='tripTableHeader')
    .table.table-header
      .select
        input#selectall(type="checkbox" checked="")
      .date Date
      .startTime Start
      .endTime End
      .duration Duration
      .startAddress Start Address
      .endAddress End Address
      .distance Dist
      .mpg MPG
      .fuelCost Fuel
      .business Bus.


  script(type='text/template' id='tripTable')
    a.trip.table(href="/trips/{{id}}" data-trip_id="{{id}}")
      .select
        input.select-trip(type="checkbox" checked="")
      .date {{dayOfWeek}}<br>{{started_at_date}}
      .startTime {{started_at_time}}
      .endTime {{ended_at_time}}
      .duration {{duration}}
      .startAddress {{start_address.multiline}}
      .endAddress {{end_address.multiline}}
      .distance {{distance}} mi
      .mpg {{average_mpg}}
      .fuelCost ${{fuel_cost_usd}}
      .business <input type="checkbox" class="business-tag" {{business_tag}} />


  script(src="/javascripts/trips.js")
